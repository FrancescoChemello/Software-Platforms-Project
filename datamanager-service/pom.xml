    </parent>

    <artifactId>datamanager-service</artifactId>

    <version>1.0.0</version>
    
    <name>Data Manager Service</name>
    
    <description>Service to manage documents extracted form the Monitoring Service.</description>

    <developers>
        <developer>
            <id>fc</id>
            <name>Francesco Chemello</name>
            <email>francesco.chemello.1@studenti.unipd.it</email>
        </developer>
